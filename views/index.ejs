        <a href='/<%= page %>4' type="button" class="btn btn-default page-click">5</a>
        <a href='/<%= page %>5' type="button" class="btn btn-default page-click">6</a>
        <a href='/<%= page %>6' type="button" class="btn btn-default page-click">7</a>
        <a href='/<%= page %>7' type="button" class="btn btn-default page-click">8</a>
        <a href='/<%= page %>8' type="button" class="btn btn-default page-click">9</a>
        <a href='/<%= page %>9' type="button" class="btn btn-default page-click">10</a>

        <!-- <a href="/0" type="button" class="btn btn-default">刷新</a> -->
        <a href="/<%= page %>98" type="button" class="btn btn-default">下一页</a>
      </div>
